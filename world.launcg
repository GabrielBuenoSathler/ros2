<launch>
    <!-- Load Gazebo with the provided world file -->
    <arg name="world_file" default="$(find my_package)/worlds/your_world_file.world"/>
    <param name="use_sim_time" value="true"/> <!-- Optional: syncs Gazebo time with ROS time -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_file)"/>
    </include>
</launch>
